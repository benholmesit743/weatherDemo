<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/temp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="@dimen/padding_small"
            >
            <TextView
                android:id="@+id/current_temp"
                style="@style/CurrentTempStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="@string/temp_format"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/medium"
                app:layout_constraintStart_toEndOf="@id/current_temp"
                app:layout_constraintTop_toTopOf="@id/current_temp"
                app:layout_constraintBottom_toBottomOf="@id/current_temp"
                >
                <TextView
                    android:id="@+id/hi_temp"
                    style="@style/HiLowTempStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/temp_format"
                    />
                <TextView
                    android:id="@+id/low_temp"
                    style="@style/HiLowTempStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/temp_format"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/precipitation"
            style="@style/PrecipitationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precipitation_format"
            app:layout_constraintTop_toBottomOf="@id/temp_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/timestamp"
            style="@style/TimestampTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timestamp_format"
            app:layout_constraintTop_toBottomOf="@id/precipitation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>