<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Umo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainToolbarTitleStyle" parent="Widget.Design.CollapsingToolbar">
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="collapsedTitleTextColor">@color/white</item>
        <item name="expandedTitleTextColor">@color/white</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForecastTitleItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SubtitleItemStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CurrentTempStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentTempSmallStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HiLowTempStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrecipitationTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrecipitationSmallTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimestampTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>